<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.activities.QuestionDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitle"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:text="优秀问答"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_reback"
            android:layout_width="50dp"
            android:text="返回"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorTitle"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:text="这是标题这是标题这是标题"
            android:textColor="@color/colorTitle" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="这是内容这是内容这是内容这是内容这是内容这是内容" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_content_more"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:text="展开更多"
                android:textColor="@color/colorTitle" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/red"
                android:paddingLeft="10dp"
                android:layout_weight="1.5"
                android:text="悬赏20"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:text="浏览人数和回复数"/>
                <TextView
                    android:id="@+id/tv_to_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/colorTitle"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                   android:layout_weight="1"
                    android:text="我要回答"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="2个回复"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:textColor="@color/colorTitle"
                android:layout_alignParentRight="true"
                android:text="时间升序"/>
        </RelativeLayout>
    </LinearLayout>
<ListView
    android:id="@+id/lv_reply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ListView>

</LinearLayout>